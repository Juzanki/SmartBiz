{
  "build": {
    "builder": "NIXPACKS"
  },
  "nixpacks": {
    "phases": {
      "install": {
        "cmds": [
          "pip install -r requirements.txt"
        ]
      },
      "start": {
        "cmds": [
          "uvicorn backend.main:app --host=0.0.0.0 --port=${PORT}"
        ]
      }
    }
  }
}
